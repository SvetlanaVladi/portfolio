import numpy as np
with open('pogoda.csv', 'r') as data:
    j = 0 
    for line in data: 
        j += 1 
        items = line.strip().split(";") 
        i = 0 
        count = [] 
    while 1 < i < len(items+1): 
        count.append(items[i]) 
        i += 1
spisok = np.array(count) 
T = np.mean(spisok) 
d = np.std(spisok, ddof=1) 
print(str(j) + ' апреля ' + (str(T.round(2)) + ' +/- ' + str(d.round(2))))
